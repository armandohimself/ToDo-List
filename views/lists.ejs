<%- include('header'); -%>

    <div class="box" id="heading">
        <h2><%= listTitle %></h2>
    </div>

    <div class="box">
        <% ToDoitems.forEach(function(item) { %>
            <form id="deleteForm" method="POST" action="/delete">
                <div class="item">
                    <input name="deleteItem" value="<%= item._id %>" type="checkbox" onChange="this.form.submit()">
                    <p><%= item.postTitle %></p>
                </div>
                <input type="hidden" name="list" value=<%= listTitle %>>
            </form>
        <% }); %>

        <form class="item" method="POST" action="/">
            <input type="text" name="todo" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %> >+</button>
        </form>
    </div>

<%- include('footer'); -%>